<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="340dp"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/shape_dialog_bg"
    android:paddingTop="30dp"
    android:paddingBottom="60dp"
    android:paddingLeft="14dp"
    android:paddingRight="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvChangeNameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/change_name"
        android:textSize="16sp"
        android:textColor="@color/teal_200"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/dottedLine"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/shape_dot_line"
        android:layerType="software"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvChangeNameTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etInputNewName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounder_bg"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="8dp"
        android:textColor="@color/teal_200"
        android:textSize="12sp"
        tools:text="new name"
        android:lines="1"
        android:maxLength="5"
        android:hint="@string/change_name_prompt"
        android:textColorHint="@color/hint"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dottedLine" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnConfirm"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:text="@string/confirm"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:background="@drawable/btn_bg"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="@id/etInputNewName"
        app:layout_constraintTop_toBottomOf="@id/etInputNewName" />

</androidx.constraintlayout.widget.ConstraintLayout>